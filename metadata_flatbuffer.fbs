namespace BlorgMetaFlat;

table DirectoryEntryMetadata {
    size:uint64;
    created:uint64;
    modified:uint64;
    accessed:uint64;
    directory:bool;
}

table DirectoryEntriesMetadata {
    name:[string];
    size:[uint64];
    created:[uint64];
    modified:[uint64];
    accessed:[uint64];
}

table Directory {
    directories:DirectoryEntriesMetadata;
    directory_count:uint64;
    files:DirectoryEntriesMetadata;
    file_count:uint64;
}